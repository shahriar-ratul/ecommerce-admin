{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "auth": ["./src/auth"],
      

    }
  },
  "include": [
    "next-env.d.ts",
    "process.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
